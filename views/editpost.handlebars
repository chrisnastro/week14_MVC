<main class="container mb-5">
    <h1 class="mb-4">Edit Post</h1>
    <form class="update-sw-post-form" class="mb-3">
        <div class="mb-3">
            <label for="title-update-sw-post" class="form-label">Title</label>
            <input type="text" class="form-control" id="title-update-sw-post" placeholder="Enter title of post" vale="{{title}}" />
        </div>
        <div class="mb-3">
            <label for="content-update-sw-post" class="form-label">Content</label>
            <textarea class="form-control" id="content-update-post" rows="4" placeholder="Update post here!">
                {{content}}
            </textarea>
        </div>
        <button type="submit" id="update-sw-post" class="btn btn-primary">Update Post</button>
        <button type="submit" id="delete-sw-post" class="btn btn-primary">Delete Post</button>
    </form>
</main>