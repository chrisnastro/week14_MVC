<main class="containter mt-5">
    <article>
        <h1>{{title}}</h1>
        <p>Created by: {{user.username}} | Date: {{format_date createdAt}}</p>
        <p>{{content}}</p>
    </article>
    {{#if logged_in}}
    <form class="new-sw-comment-form" class="mb-3">
        <div class="mb-3">
            <label for="comment" class="form-label">Add Comment:</label>
            <textarea class="form-control" id="content-new-sw-comment" rows="4" placeholder="Comment here!"></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
    {{if}}
    <h2>Comment history:</h2>
    {{#each comments}}
    <div class="comment mb-3">
        <p>{{comment_text}}</p>
        <p>By: {{user.username}} on {{format_date createdAt}}</p>
    </div>
    {{/each}}
</main>